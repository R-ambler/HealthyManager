<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTheme"
    android:orientation="vertical">
    <!--logo-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="找回密码"
            android:textColor="@color/colorWhite"
            android:textSize="36sp" />
    </LinearLayout>
    <!--输入框-->
    <LinearLayout
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/compSide"
        android:layout_marginRight="@dimen/compSide"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/findPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="@dimen/compHeight"
            android:background="@drawable/shape"
            android:gravity="left"
            android:hint="请输入手机号"
            android:maxLength="11"
            android:maxLines="1"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/interval"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/findIdentifyCode"
                android:layout_width="0dp"
                android:layout_height="@dimen/compHeight"
                android:layout_weight="3"
                android:background="@drawable/shape"
                android:gravity="left"
                android:hint="请输入短信验证码"
                android:maxLength="16"
                android:maxLines="1"
                android:textSize="16sp" />

            <Button
                android:id="@+id/findIdentifyCodeBtn"
                android:layout_width="0dp"
                android:layout_height="@dimen/compHeight"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_weight="2"
                android:background="@drawable/shape_red"
                android:text="获取验证码"
                android:textColor="@color/colorWhite"
                android:textSize="16sp" />
        </LinearLayout>

        <EditText
            android:id="@+id/findPasswordOne"
            android:layout_width="match_parent"
            android:layout_height="@dimen/compHeight"
            android:layout_marginTop="@dimen/interval"
            android:background="@drawable/shape"
            android:gravity="left"
            android:hint="请输入新密码"
            android:inputType="textPassword"
            android:maxLength="16"
            android:maxLines="1"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/findPasswordTwo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/compHeight"
            android:layout_marginTop="@dimen/interval"
            android:background="@drawable/shape"
            android:gravity="left"
            android:hint="请再次输入新密码"
            android:inputType="textPassword"
            android:maxLength="16"
            android:maxLines="1"
            android:textSize="16sp" />


    </LinearLayout>
    <!--登录-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/compSide"
        android:layout_marginRight="@dimen/compSide"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/findSubmitBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/input"
            android:background="@drawable/shape"
            android:text="提    交"
            android:textColor="@color/colorTheme"
            android:textSize="20sp" />
    </LinearLayout>
</LinearLayout>