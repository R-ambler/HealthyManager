<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/compSide"
    android:orientation="vertical">
    <!--logo-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/medicalTitleTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/colorTheme"
            android:textSize="36sp" />
    </LinearLayout>
    <!--输入框-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <LinearLayout
            android:id="@+id/medicalInput"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/compSide"
            android:layout_marginRight="@dimen/compSide"
            android:gravity="center"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/compHeight"
                        android:layout_weight="3"
                        android:gravity="right"
                        android:text="*主诉："
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/medicalMainSuitEText"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/compHeight"
                        android:layout_weight="6"
                        android:background="@drawable/shape"
                        android:gravity="left"
                        android:maxLength="100"
                        android:maxLines="1"
                        android:textSize="16sp" />
                </TableRow>

                <TableRow android:layout_marginTop="@dimen/interval">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/compHeight"
                        android:layout_weight="3"
                        android:gravity="right"
                        android:text="*诊断："
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/medicalDiagnoseEText"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/compHeight"
                        android:layout_weight="6"
                        android:background="@drawable/shape"
                        android:gravity="left"
                        android:maxLength="100"
                        android:maxLines="1"
                        android:textSize="16sp" />
                </TableRow>

                <TableRow android:layout_marginTop="@dimen/interval">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/compHeight"
                        android:layout_weight="3"
                        android:gravity="right"
                        android:text="*就诊日期："
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/medicalInquiryTimeEText"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/compHeight"
                        android:layout_weight="6"
                        android:background="@drawable/shape"
                        android:gravity="left"
                        android:maxLength="16"
                        android:maxLines="1"
                        android:textSize="16sp" />
                </TableRow>

                <TableRow android:layout_marginTop="@dimen/interval">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/compHeight"
                        android:layout_weight="3"
                        android:gravity="right"
                        android:text="医院名称："
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/medicalHospitalNameEText"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/compHeight"
                        android:layout_weight="6"
                        android:background="@drawable/shape"
                        android:gravity="left"
                        android:maxLength="100"
                        android:maxLines="1"
                        android:textSize="16sp" />
                </TableRow>

                <TableRow android:layout_marginTop="@dimen/interval">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/compHeight"
                        android:layout_weight="3"
                        android:gravity="right"
                        android:text="科室名称："
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/medicalDeptNameEText"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/compHeight"
                        android:layout_weight="6"
                        android:background="@drawable/shape"
                        android:gravity="left"
                        android:maxLength="100"
                        android:maxLines="1"
                        android:textSize="16sp" />
                </TableRow>

                <TableRow android:layout_marginTop="@dimen/interval">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/compHeight"
                        android:layout_weight="3"
                        android:gravity="right"
                        android:text="医生姓名："
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/medicalDoctorNameEText"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/compHeight"
                        android:layout_weight="6"
                        android:background="@drawable/shape"
                        android:gravity="left"
                        android:maxLength="100"
                        android:maxLines="1"
                        android:textSize="16sp" />
                </TableRow>

                <TableRow android:layout_marginTop="@dimen/interval">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/compHeight"
                        android:layout_weight="3"
                        android:gravity="right"
                        android:text="现病史："
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/medicalMedicalHistoryEText"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/compHeight"
                        android:layout_weight="6"
                        android:background="@drawable/shape"
                        android:gravity="left"
                        android:maxLength="100"
                        android:maxLines="1"
                        android:textSize="16sp" />
                </TableRow>

                <TableRow android:layout_marginTop="@dimen/interval">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/compHeight"
                        android:layout_weight="3"
                        android:gravity="right"
                        android:text="查体："
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/medicalPhysicalExaminationEText"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/compHeight"
                        android:layout_weight="6"
                        android:background="@drawable/shape"
                        android:gravity="left"
                        android:maxLength="100"
                        android:maxLines="1"
                        android:textSize="16sp" />
                </TableRow>

                <TableRow android:layout_marginTop="@dimen/interval">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/compHeight"
                        android:layout_weight="3"
                        android:gravity="right"
                        android:text="诊疗建议："
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/medicalSuggestEText"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/compHeight"
                        android:layout_weight="6"
                        android:background="@drawable/shape"
                        android:gravity="left"
                        android:maxLength="100"
                        android:maxLines="1"
                        android:textSize="16sp" />
                </TableRow>

                <TableRow android:layout_marginTop="@dimen/interval">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/compHeight"
                        android:layout_weight="3"
                        android:gravity="right"
                        android:text="备注："
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/medicalRemarkEText"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/textAreaHeight"
                        android:layout_weight="6"
                        android:background="@drawable/shape"
                        android:gravity="left"
                        android:maxLength="100"
                        android:maxLines="8"
                        android:textSize="16sp" />
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </ScrollView>
    <!--提交-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/compSide"
        android:layout_marginRight="@dimen/compSide"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/medicalSubmitBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/input"
            android:background="@drawable/shape_theme"
            android:text="提    交"
            android:textColor="@color/colorWhite"
            android:textSize="20sp" />
    </LinearLayout>
</LinearLayout>